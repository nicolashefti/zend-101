{% extends 'layout/layout.twig' %}

{% block content %}
    <div class="container">
        <div class="shadow-box super-margin-box super-padding-box">

            <h1>Edit <mark>{{ destination.title }}</mark></h1>

            {{ form().openTag(form)|raw }}
                {% for element in form %}
                    {{ formLabel(element) }}
                    {{ formElement(element) }}
                    {{ formElementErrors(element) }}
                {% endfor %}
            {{ form().closeTag()|raw }}

        </div>
    </div>
{% endblock %}
