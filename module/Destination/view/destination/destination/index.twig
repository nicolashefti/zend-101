{% extends 'layout/layout.twig' %}

{% block content %}
    <p>Your destination 
    </p>
    <form class="form-inline" action="{{ url('destination') }}" method="get">
        <div class="form-group">
            <div class="input-group">
                <input class="form-control input-lg" type="text" name="city" value="{{ title_search != '' ? title_search : '' }}" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-lg"><span class="glyphicon glyphicon-search"></span>
            </button>
        </div>
    </form>
    <p>
    &nbsp;
    </p>
    {% for destination in destinations %}
        <a href="{{ url('destination', {'action' : 'show', 'id' : destination.id }) }}">
          <div class="row dest-preview-card">
            <div class="col-md-3">
              <img class="img-responsive" src="/img/uploads/{{ destination.picture.name }}">
            </div>
            <div class="col-md-9">
              <h3>{{ destination.title }}</h3>
              <p><strong>{{ destination.price }}</strong> &euro; / Leute</p>
              <p>{{ destination.description }}</p>
              <p><span class="glyphicon glyphicon-map-marker"></span> City: {{ destination.city }}</p>
            </div>
          </div>
        </a>
    {% endfor %}
    
    {% include 'destination/plugins/alert-signup-block' %} 

{% endblock content %}
