{% extends 'layout/layout.twig' %}

{% block content %}
    <section class="container">
        <div class="shadow-box super-margin-box super-padding-box">
            <h1>{{ destination.title }}</h1>
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                    {% for image in destination.picture %}
                      <div class="col-md-4">
                        <img class="img-thumbnail" src="/img/uploads/{{ image.name }}">
                      </div>
                    {% endfor %}
                    </div>
                    <hr>
                    <p>{{ destination.description }}</p>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-success btn btn-block">Book now</button>
                    <p>
                      <a href={{ url('destination', {'action':'edit', 'id':destination.id})}}>Edit</a>
                      <a href={{ url('destination', {'action':'delete', 'id':destination.id})}}>Delete</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}
