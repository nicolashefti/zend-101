<div class="col-md-3">
    More info menu
    <ul>
        <li><a class="ajax-link" data-target="time" href="/ajax">Do you have the time ?</a></li>
        <li><span id="time">Time will come...</span></li>
    </ul>
</div>
<div class="col-md-3">Features</div>
<div class="col-md-6">Footer disclaimer</div>
<script type="text/javascript">
    $(function(){
        $('.ajax-link').click(function(event){
            event.preventDefault();

            var link = $(this).attr('href');

            $.get(link, function(data){
                $("#time").html(data.time);
            });
        });
    })
</script>